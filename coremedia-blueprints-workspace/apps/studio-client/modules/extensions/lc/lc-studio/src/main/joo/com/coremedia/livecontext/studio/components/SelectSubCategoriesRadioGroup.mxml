        xmlns:exml="http://www.jangaroo.net/exml/0.8"
        xmlns="exml:ext.config"
        xmlns:ui="exml:com.coremedia.ui.config"
        width="auto"
        columns="1"
        hideLabel="true"
        defaultValue="inheritFromCatalogRadioButton">
  <fx:Metadata>
    [ResourceBundle('com.coremedia.livecontext.studio.LivecontextStudioPlugin')]
  </fx:Metadata>
  <fx:Script><![CDATA[
    public static const xtype:String = "com.coremedia.livecontext.studio.config.selectSubCategoriesRadioGroup";

    private var config:SelectSubCategoriesRadioGroup;

    public native function SelectSubCategoriesRadioGroup(config:SelectSubCategoriesRadioGroup = null);
    ]]></fx:Script>

  <ui:items>
    <Radio itemId="inheritFromCatalogRadioButton"
           boxLabel="{resourceManager.getString('com.coremedia.livecontext.studio.LivecontextStudioPlugin', 'Commerce_Child_Categories_inherit_label')}"/>
    <Radio itemId="selectChildrenRadioButton"
           boxLabel="{resourceManager.getString('com.coremedia.livecontext.studio.LivecontextStudioPlugin', 'Commerce_Child_Categories_select_label')}"/>
  </ui:items>

</ui:BoundRadioGroup>
