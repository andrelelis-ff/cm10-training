<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.coremedia.blueprint.docker</groupId>
    <artifactId>workflow-server.blueprint-spring-boot-docker</artifactId>
    <version>1-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>workflow-server</artifactId>
  <packaging>pom</packaging>

  <dependencies>
    <dependency>
      <groupId>${blueprint.boot.groupId}</groupId>
      <artifactId>workflow-server-app</artifactId>
      <version>${blueprint.boot.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>${blueprint.groupId}</groupId>
      <artifactId>workflowserver-blueprint-config</artifactId>
      <version>${blueprint.version}</version>
      <type>coremedia-application</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>${blueprint.groupId}</groupId>
      <artifactId>wfs-tools-application</artifactId>
      <type>coremedia-application</type>
      <version>${blueprint.version}</version>
      <scope>runtime</scope>
    </dependency>
  </dependencies>

  <build>
    <finalName>workflow-server</finalName>

    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-boot-jar</id>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <phase>generate-resources</phase>
            <configuration>
              <includeArtifactIds>workflow-server-app</includeArtifactIds>
              <stripVersion>true</stripVersion>
              <outputDirectory>target</outputDirectory>
              <excludeTransitive>true</excludeTransitive>
            </configuration>
          </execution>
          <execution>
            <id>unpack-corem-home</id>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <phase>generate-resources</phase>
            <configuration>
              <includeGroupIds>${blueprint.groupId}</includeGroupIds>
              <includeArtifactIds>workflowserver-blueprint-config</includeArtifactIds>
              <includeTypes>coremedia-application</includeTypes>
              <outputDirectory>${project.build.directory}/corem-home</outputDirectory>
              <excludes>lib</excludes>
            </configuration>
          </execution>
          <execution>
            <id>extract-tools</id>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <phase>generate-resources</phase>
            <configuration>
              <includeGroupIds>${blueprint.groupId}</includeGroupIds>
              <includeArtifactIds>wfs-tools-application</includeArtifactIds>
              <includeTypes>coremedia-application</includeTypes>
              <excludeTransitive>true</excludeTransitive>
              <outputDirectory>target/tools</outputDirectory>
              <!--this is provided by the base image -->
              <excludes>bin/pre-config.jpif,bin/groovysh.jpif,properties/corem/tools-logback.xml,properties/corem/capclient.properties</excludes>
            </configuration>
          </execution>

        </executions>
      </plugin>
      <plugin>
        <groupId>com.spotify</groupId>
        <artifactId>dockerfile-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
