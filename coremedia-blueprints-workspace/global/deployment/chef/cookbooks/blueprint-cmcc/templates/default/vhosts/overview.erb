<VirtualHost *:80>
  ServerName <%= @server_name %>
  <% if @server_aliases -%>
  ServerAlias <%= @server_aliases.join " " %>
  <% end -%>
  DocumentRoot <%= @docroot %>

  <Directory <%= @docroot %>>
    Options <%= [@directory_options || "FollowSymLinks" ].flatten.join " " %>
    AllowOverride <%= [@allow_override || "None" ].flatten.join " " %>
    Require all granted
  </Directory>

  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>

  <%- server_status='/server-status' -%>
  <Location <%= server_status %> >
    SetHandler server-status
    Require local
  </Location>

  RewriteEngine On
  LogLevel info rewrite:trace1

  ErrorLog /var/log/httpd/<%= @application_name %>-error.log
  CustomLog /var/log/httpd/<%= @application_name %>-access.log combined

  <% if @directory_index -%>
  DirectoryIndex <%= [@directory_index].flatten.join " " %>
  <% end -%>

  # proxy actuators here to prevent cors problems
  ProxyPass /content-management-server http://localhost:40181/actuator
  ProxyPass /master-live-server http://localhost:40281/actuator
  ProxyPass /workflow-server http://localhost:40381/actuator
  ProxyPass /content-feeder http://localhost:40481/actuator
  ProxyPass /user-changes http://localhost:40581/actuator
  ProxyPass /elastic-worker http://localhost:40681/actuator
  ProxyPass /cae-feeder-preview http://localhost:40781/actuator
  ProxyPass /cae-feeder-live http://localhost:40881/actuator
  ProxyPass /cae-preview http://localhost:40981/actuator
  ProxyPass /cae-live http://localhost:42181/actuator
  ProxyPass /studio-server http://localhost:41081/actuator
  ProxyPass /headless-server-preview http://localhost:41181/actuator
  ProxyPass /headless-server-live http://localhost:41281/actuator
  ProxyPass /commerce-adapter-mock http://localhost:44081/actuator
  ProxyPass /commerce-adapter-sfcc http://localhost:44181/actuator
  ProxyPass /commerce-adapter-hybris http://localhost:44281/actuator
  ProxyPass /commerce-adapter-wcs http://localhost:44381/actuator

  # Canonical host, <%= @server_name %>
  RewriteCond %{HTTP_HOST}   !^<%= @server_name %> [NC]
  RewriteCond %{HTTP_HOST}   !^$
  RewriteRule ^/(.*)$        http://<%= @server_name %>/$1 [L,R=301]

  RewriteCond %{DOCUMENT_ROOT}/system/maintenance.html -f
  RewriteCond %{SCRIPT_FILENAME} !maintenance.html
  RewriteRule ^.*$ /system/maintenance.html [L,R=503]

  # redirect 404 to overview page
  ErrorDocument 404 https://<%= @server_name %>/
</VirtualHost>

