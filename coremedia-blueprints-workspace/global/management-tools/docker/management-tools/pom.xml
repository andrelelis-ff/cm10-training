<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.coremedia.blueprint.docker</groupId>
    <artifactId>management-tools.blueprint-spring-boot-docker</artifactId>
    <version>1-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>management-tools</artifactId>
  <packaging>pom</packaging>

  <dependencies>
    <dependency>
      <groupId>${blueprint.groupId}</groupId>
      <artifactId>cms-tools-application</artifactId>
      <type>coremedia-application</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>${blueprint.groupId}</groupId>
      <artifactId>mls-tools-application</artifactId>
      <type>coremedia-application</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>${blueprint.groupId}</groupId>
      <artifactId>rls-tools-application</artifactId>
      <type>coremedia-application</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>${blueprint.groupId}</groupId>
      <artifactId>wfs-tools-application</artifactId>
      <type>coremedia-application</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>${blueprint.groupId}</groupId>
      <artifactId>caefeeder-tools-application</artifactId>
      <type>coremedia-application</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>${blueprint.groupId}</groupId>
      <artifactId>theme-importer-application</artifactId>
      <type>coremedia-application</type>
      <scope>runtime</scope>
    </dependency>
  </dependencies>
  <build>
    <finalName>management-tools</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>extract-tools</id>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <phase>generate-resources</phase>
            <configuration>
              <includeGroupIds>${blueprint.groupId}</includeGroupIds>
              <includeArtifactIds>cms-tools-application,wfs-tools-application,mls-tools-application,rls-tools-application,caefeeder-tools-application,theme-importer-application</includeArtifactIds>
              <includeTypes>coremedia-application</includeTypes>
              <excludeTransitive>true</excludeTransitive>
              <outputDirectory>target/tools</outputDirectory>
              <!--this is provided by the base image -->
              <excludes>bin/pre-config.jpif,bin/groovysh.jpif,properties/corem/tools-logback.xml</excludes>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>com.spotify</groupId>
        <artifactId>dockerfile-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
